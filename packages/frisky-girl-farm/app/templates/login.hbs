<div class="h-100 d-flex justify-content-center align-items-center">
  <div class="card flex-fill center-card">
    <div class="card-header">
      Sign in
    </div>
    {{#let (this.createFormState) as |formState|}}
      <BsForm
        class="card-body"
        @model={{formState}}
        @onSubmit={{perform this.login formState}}
        as |form|
      >
        <form.element
          @controlType="email"
          @label="Email address"
          placeholder="Enter email"
          @property="email"
          @customError={{formState.error}}
        />
        <form.submitButton>
          Login
          {{#if form.isSubmitting}}
            <FaIcon @icon="spinner" @spin={{true}}/>
          {{/if}}
        </form.submitButton>
      </BsForm>
    {{/let}}
  </div>
</div>
