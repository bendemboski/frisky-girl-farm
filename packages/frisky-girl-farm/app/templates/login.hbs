<div class="h-100 d-flex justify-content-center align-items-center">
  <div class="card flex-fill center-card">
    <div class="card-header">
      Sign in
    </div>
    {{#let (this.createFormState) as |formState|}}
      <BsForm
        class="card-body"
        @model={{formState}}
        @onSubmit={{perform this.login formState}}
        as |form|
      >
        <form.element
          @controlType="email"
          @label="Email address"
          @placeholder="Enter email"
          @property="email"
          @customError={{formState.error}}
        />
        <BsButton
          @buttonType="submit"
          @type="primary"
          @disabled={{form.isSubmitting}}
        >
          Login
          {{#if form.isSubmitting}}
            {{fa-icon "spinner" spin=true}}
          {{/if}}
        </BsButton>
      </BsForm>
    {{/let}}
  </div>
</div>
